<link href="~/Content/loginstyle.css?v=1.0" rel="stylesheet" />
@model Inventory.Model.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Common.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<hr />*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container text-capitalize" style="margin-bottom:2px; font-size:14px;">
            @if (Session["ConfirmLogin"] != null && Session["ConfirmLogin"].ToString() != "")
            {
                <div class="bg-danger alert alert-dismissable">
                    @Session["ConfirmLogin"].ToString()
                </div>
            }
            @if (ViewData["Message"] != null && ViewData["Message"].ToString() != "")
                {
                <div class="alert alert-dismissable alert-danger" style="margin-top:3px;">
                    @ViewData["Message"]
                </div>
            }
        </div>
        <div class="container" style="margin-top:80px; margin-bottom:80px;">
            <div class="login">
                @if (ViewBag.CompanyShortName != "" || ViewBag.CompanyShortName != null)
                { <h1>Login to @ViewBag.CompanyShortName App</h1>}
                else
                {<h1>Login to Laundry App</h1> }
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <p> @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })</p>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                   <label for="Password" class="control-label col-md-2">Password</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" name="Password" id="Password" required="required" placeholder="Password" />
                    </div>
                </div>
                <div class="form-group" style="margin-top:10px;">
                    <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}


